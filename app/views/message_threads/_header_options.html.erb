  <div class="message-threads-header-options-links">
    
    <%= link_to image_tag("trash.png"), delete_selected_threads_url, :id => "delete_selected_threads", :class => 'hidden' %>
    <div id="message_threads_more_option_container" class="message-threads-more-option-container hidden">
      <span id="message_threads_more_option">MORE</span>
      <div id="message_thread_more_options">

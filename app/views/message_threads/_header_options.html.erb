          <li><%= link_to "Mark as read", change_message_threads_status_url, :id => "mark_selected_threads_as_read" %></li>
          <li><%= link_to "Mark as unread", change_message_threads_status_url, :id => "mark_selected_threads_as_unread" %></li>

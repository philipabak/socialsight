<div class="messages">
  <div class="container">
    <%= render 'shared/account_menu', tab: 'messages' %>
    <div class="am_tabs_contents">
      <div class="">
        <div id="tab_messages">
          <%= render :partial => 'header_options' %>	  
          <table id="message_threads_table" class="message-threads-table" cellpadding="0" cellspacing="0">
      			<tr class="message-threads-row">
        			<td class="message-threads-row-selector-cell">
        				<div class="message-threads-select-all sss-chb">
        				  <input type="checkbox" id="select_all"/>                
        				</div>
    			   </td>
  			     <td><strong>From</strong></td>
      			<td></td>
      			<td></td>
      			<td><strong>Message</strong></td>
  			   </tr>		  
  		     <%= render @message_threads %>
         </table>
         <% if @message_threads.empty? %>
          <center><h2>You have no messages</h2></center>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>